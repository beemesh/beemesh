namespace beemesh.machine;

// CapacityReply schema (separate file so we can have per-file root_type)
table CapacityReply {
  request_id:string;
  ok:bool;
  node_id:string;
  region:string;
  kem_pubkey:string; // optional base64-encoded KEM public key for node
  capabilities:[string];
  cpu_available_milli:uint32;
  memory_available_bytes:ulong;
  storage_available_bytes:ulong;
}

root_type CapacityReply;
