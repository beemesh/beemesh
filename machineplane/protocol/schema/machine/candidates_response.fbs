namespace beemesh.machine;

// A candidate node with its public key for encrypted key share distribution
table CandidateNode {
    peer_id: string;
    public_key: string; // Base64-encoded KEM public key for encrypting key shares
}

table CandidatesResponse {
    ok: bool;
    candidates: [CandidateNode]; // List of candidate nodes with their public keys
}

root_type CandidatesResponse;